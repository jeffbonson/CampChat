.business_entity_list_wrapper
{
	float:left;width:100%;
	
	a{color:#000;}
	
	.businessEntityBox
	{
		background: #FFF;
	    width: 96%;
	    margin-left: 2%;
	    min-height: 227px;
	    margin-bottom: 10px;
	    box-shadow: 1px 1px 5px lightgrey;
	    border-radius: 5px;
	    float: left;
	    padding-bottom: 20px;
		
		.businessEntityImage
		{
			float:left; width:100%; text-align:center;margin-top:15px;
		
			img{height:80px;width:80px;}
			
			
		}
		
		.userEntityImage img{border-radius:50%;}
		
		.businessEntityName
		{
			float:left; width:100%; text-align:center; font-weight:bold; font-size:16px; margin-top:10px;
		}
		
		.businessEntityDesc
		{
			float:left; width:100%; text-align:center; font-size:12px; margin-top:10px;
		}
		
		&:hover{box-shadow:1px 1px 5px gray;}
	}
}
