		{
			width:95%;margin-top:3%;
			.meta-row .meta-row-label {text-align:right;}
		}
	}/*transaction_form */
	
	.form-app
	{
		.label-half{ width: 97%;text-align:left !important;    padding: 3px; margin-left: 5%;}
		.input-half{ width: 85%; margin-left:5%;
			input[type="text"]{width:91%;font-size:16px;}
		}
		
		.panel-head
		{
			.icon
			{
				width: 20%;
				span{margin: 10px;padding: 20px;font-size: 30px;}
			}
			.panel-head-data{width:51%;padding-bottom: 10px;}
			.panel-head-action{width: 15%;}
			
		}/*panel-head*/
		
	}/*form-app*/
	
	.list-form-scroller{width:100%; overflow-x:auto;}
	.list-form{width:150%;}
	
	.inline-form
	{
		.inline-form-row
		{
			.label{width:30%;padding-top:13px;}	
			.input{width:30%;}
			.submit{width:20%;}
		}/*inline-form-row*/
	}/*inline-form*/
	
	.page-filter
	{
		display: table; width: 99%;table-layout: fixed;
		
		.item
		{
			 display: table-cell; vertical-align: -webkit-baseline-middle; padding-right:10px;
			 
			 .date-range-container{width:100%;}
			 .date-range-container .date-range input{padding:13.5px 10px; font-size: $placeholder-smartphone;}
		}
		
		.status_filter{width: 100px; padding-right:16px;}
		 
	}/*page-filter*/
	
	.input-text-field{@include input-text-field($placeholder-smartphone);}
	.input-select-field{@include input-text-field($placeholder-smartphone);}
	.input-select-field-selected{@include input-select-field-selected($placeholder-smartphone);}
	
	.auto_complete{float:left;}
	
	.item_card
	{
		.inventory{width:100%;padding:10px 0 10px 0; }
		
		.item_details
		{
			float:right; width:100%;
			
			.item_description
			{
				 padding:10px;font-size:12px;
			}
			
			.item_transactions .itrans
			{   
				width: 94%;
			    margin-left: 1%;
			    background: lightblue;
			    margin-bottom: 10px;
			    border-radius: 5px;
			    padding:15px;
				line-height: 25px;
			}
			
			.rgtbdr{border-right:1px solid lightgray;}
		}
		
		.item_status{float:right; width:100%;padding:10px 0 10px 0; margin-top:10px; }
	}
	
	.preview_action_wrapper
	{
		.send_email_wrapper{width:73%;}
		
		.send_email_input_wrapper
		{
			width:75%;
			input{width:92%;}
		}
		.download_pdf_wrapper{width:25%;}
			
	}
	
	.business_entity_info
	{
		.information_wrapper
		{
			.profile_wrapper
			{
				width:100%;max-height:340px;
			}/*profile_wrapper*/
			
			.notes_wrapper
			{
				max-height:400px;width:98%; margin-left:2%;
			}/*.notes_wrapper*/
			
		}/*.information_wrapper*/
		
	}/*business_entity_info*/
	
	.splitPartialItem{width: 87%;margin-top: 10px;}
	.original_varialble_item{ width: 87%;}
	
}



