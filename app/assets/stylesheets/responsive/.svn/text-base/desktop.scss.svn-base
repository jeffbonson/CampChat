@import 'components/attributes';

@mixin desktop-very-small
{
	button{width: 100%; margin-bottom:10px;}
	input[type="submit"]{width: 100%;}
	
	@include placeholder($placeholder-desktop);
	
   .nav_menu_frame
	{
		display:none;width: $nav-menu-width-very-small-desktop; margin-left : -$nav-menu-width-very-small-desktop;
		
		.logo_container{padding: 25px;}
		
		.nav_frame
		{
			
			.nav_items{ overflow-y: auto; height: 280px; }
	    }
	}/*nav_menu_frame*/
	
	.nav_page_frame
	{	
		width:100%;
		
	
		.page_frame header
		{
			display:block;
			.nav_menu_button_frame{font-size:$nav-link-size; padding: 25px;}
			.nav_menu_logo_frame{font-size:$nav-link-size; padding: 25px;}
		}
	}/*nav_page_frame*/
	
	.nav_page_frame_slider{width: $nav_page_frame_slider-very-small-desktop;}
	
	.usersPageContent .fullPageSingleContainer {width:98%; margin-left:1%;}
	
	.page-outer
	{
		width:96%; margin:10px 0 0 2%;
		
		.page-header
		{
			.title{width:100%;font-size: $page-header-title-desktop; margin-bottom:10px; text-align:center;}
			
			.action
			{
				width:100%; font-size: $page-header-title-desktop; margin-bottom:10px;
				.button-1{ width:100%;}
				
			}
		}/*.page-header*/
		
		.page-container
		{
			margin-top:10px; 
			
			.page-form
				{
					.blocks
					{
						margin-bottom:10px;
						
						.box1{width:100%;}
						.box2{width:100%;}
						.box3{width:100%;}
						.box3_fill{width:100%;}
						.box4{width:100%;}
						.box4_fill{width:100%;}
						.box5{width:100%;}
						.box5_fill{width:100%;}
						
					}/*.blocks*/
				}/*.page-form*/
			
		}/*page-container*/

	}/*page-outer*/
	
	.dialog_box
	{
		margin: 3% 2% 10px 2%;width:96%;
		
		.dialog-wrapper 
	    {
	    	.title-bar
	    	{
	    		.header-bar{ width: 75%; padding: 5px 20px; 
	    			h2{font-size:18px;}
	    		}
	    		.close-dialog{width:5%;font-size: 25px; margin-top:15px; }
	    	}
	    }/*dialog-wrapper */
	     
	}/*dialog_box*/
	

	
	.transaction_form 
	{
		.business-contact-segment
		{
			.add-business-contact
			{
				width:95%; padding-top: 11px;
				margin: 2%;font-size:16px;
			}
		}/*business-contact-segment*/
		
		#invoise-segment .meta-info 
		{
			width:90%;margin-top:4%; margin-left:4%;
			.meta-row .meta-row-label {text-align:left;}
		}
	}/*transaction_form */
	
	.form-app
	{
		.label-half{ width: 28%; padding: 15px; margin-right:10px;}
		.input-half
		{ width: 53%;
			input[type="text"]{width:91%;font-size:16px;}
		}
		
	.panel-head
		{
			.icon
			{
				width: 100%;
				span{width:100%; text-align:center; margin:0; border:0; border-bottom:1px solid lightgray; margin-top: -10px;padding: 10px;font-size: 16px;font-weight:bold;}
			}
			.panel-head-data{width:93%; padding:10px;}
			.panel-head-action{width: 100%;
				a{float:left;margin-left:38%;}
			}
			
		}/*panel-head*/
	
	}/*form-app*/
	
	.list-form-scroller{width:100%; overflow-x:auto;}
	.list-form{width:300%;}
	
	.inline-form
	{
		.inline-form-row
		{
			.label{width:90%;padding-top:13px;}	
			.input{width:90%;margin-bottom:10px;}
			.submit{width:90%;}
		}/*inline-form-row*/
	}/*inline-form*/

	.add_item_form_wrapper
	{
		height:65px;
		
		.add_item_form{ padding:20px 0 20px 5%; position:absolute; width:91%;}
		
	}/*add_item_form_wrapper*/
	
	.page-filter
	{
		float:left; width: 100%;
		
		.item
		{
			 float:left; width: 100%; margin-bottom:10px;
			 
			 
			 
			 .date-range-container{width:97%;}
			 .date-range-container .date-range input{padding:13.5px 10px;font-size : $placeholder-desktop;}
		}
		 
	}/*page-filter*/
	
	.input-text-field{@include input-text-field($placeholder-desktop);}
	.input-select-field{@include input-text-field($placeholder-desktop);}
	
	.auto_complete{float:left;}
	
	.item_card
	{
		.inventory{width:100%;padding:10px 0 10px 0; }
		
		.item_details
		{
			float:right; width:100%;
			
			.item_description
			{
				 padding:10px;font-size:12px;
			}
			
			.item_transactions .itrans
			{   
				width: 88%;
			    margin-left: 3%;
			    background: lightblue;
			    margin-bottom: 10px;
			    border-radius: 5px;
				line-height: 25px;
			}
			
			.rgtbdr{border-right:1px solid lightgray;}
		}
		
		.item_status{float:right; width:100%;padding:10px 0 10px 0;margin-top:10px; }
	}
	
	.preview_action_wrapper
	{
		.send_email_wrapper{width:100%;
		
			.send_email_input_wrapper
			{
				width:74%;
				input{width:88%;}
			}
		
		}
		.download_pdf_wrapper
		{
			width:100%;margin-top:20px;
			button{width:100%;}
		}
			
	}
	
	.business_entity_info
	{
		.information_wrapper
		{
			.profile_wrapper
			{
				width:100%;max-height:340px;
			}/*profile_wrapper*/
			
			.notes_wrapper
			{
				max-height:400px;width:98%; margin-left:2%;
			}/*.notes_wrapper*/
			
		}/*.information_wrapper*/
		
	}/*business_entity_info*/
	
	.splitPartialItem{width: 87%;margin-top: 10px;}
	.original_varialble_item{ width: 87%;}
	
	
}/*desktop-very-small*/

