@import 'components/attributes';

@mixin ipad-portrait
{
	
	html, body{cursor:pointer;}
	
	@include placeholder($placeholder-ipad);
    
	.nav_menu_frame
	{
		display:none; width: $nav-menu-width-ipad-p;  margin-left : -$nav-menu-width-ipad-p;
		.nav_items
		{
			.nav_item{padding:25px 0 25px 10px;}
		}
	}
	
	.nav_page_frame
	{	
		width:100%;
		
		.page_frame header
		{
			display:block;
			.nav_menu_button_frame{font-size:$nav-link-size-ipad-portrait; padding: 25px 35px 25px 30px;}
			.nav_menu_logo_frame{font-size:$nav-link-size-ipad-portrait; padding: 25px 35px 25px 30px;}
		}
	}
	
	.nav_page_frame_slider{width: $nav_page_frame_slider-ipad-p;}
	
	input[type="submit"]
	{
		padding : 20px 30px 20px 30px; -webkit-appearance: none;-moz-appearance: none;
		appearance: none; border:none; 
	}
	
	input[type="text"] {border:0px;}
	
	.form-app .form-row 
	{	
		margin-top:15px;
		.forgotPassword{margin:40px 0 20px 0; font-size:1em;}
	}
	
	.usersPageContent 
	{
		.fullPageSingleContainer
		{
			width:60%; margin-left:20%;
			.homeLogoTitle{font-size: 25px;line-height: 30px;}
			.containerTitle{padding : 20px 0 20px 0; font-size: 20px;line-height: 20px;}
		}
	}
	
	.page-outer
	{
		width:96%; margin:20px 0 0 2%;
		
		.page-header
		{
			margin-bottom:10px;
			
			.title{width:45%;font-size: $page-header-title-smartphone-p;  padding-top: 10px;}
			.action
			{
				width:55%; font-size: $page-header-title-smartphone-p;
				.button-1{ width:auto; margin-right:10px;max-width:50%;}
				
			}
		}/*.page-header*/
		
		.page-container
		{
			margin-top:10px; 
			
			.page-form
				{
					.blocks
					{
						margin-bottom:10px;
						
						.box1{width:99.8%;}
						.box2{width:50%;}
						.box3{width:33.33%;}
						.box3_fill{width:66.66%;}
						.box4{width:25%;}
						.box4_fill{width:75%;}
						.box5{width:45%;}
						.box5_fill{width:55%;}
						
					}/*.blocks*/
				}/*.page-form*/
			
		}/*page-container*/
	}/*page-outer*/
	
	.transaction_form
	{
		.business-contact-segment
		{
			.add-business-contact
			{
				width: 85%;padding-top: 5px; margin: 5%;font-size: 16px;
			}
		}/*business-contact-segment*/
		
		#invoise-segment .meta-info 
		{
			width:97%;margin-top:3%; margin-left:2%;
			.meta-row .meta-row-label {text-align:right;}
		}
	}/*transaction_form */
	
	.form-app
	{
		.label-half{ width: 36%; padding: 15px; margin-right:10px;}
		.input-half
		{
			width: 45%;
			input[type="text"]{width:91%;font-size:16px;}
		}
		
		.panel-head
		{
			.icon
			{
				width: 20%;
				span{margin: 10px;padding: 20px;font-size: 30px;}
			}
			.panel-head-data{width:51%;padding-bottom: 10px;}
			.panel-head-action{width: 15%;}
			
		}/*panel-head*/
	}/*form-app*/
	
	.list-form-scroller{width:100%; overflow:hidden;}
	.list-form{width:100%;}
	
	.inline-form
	{
		.inline-form-row
		{
			.label{width:20%;padding-top:13px;}	
			.input{width:20%;}
			.submit{width:10%;}
		}/*inline-form-row*/
	}/*inline-form*/
	.add_item_form_wrapper
	{
		.add_item_form{ padding:20px 0 20px 5%; float:left; width:95%;}
	}/*add_item_form_wrapper*/
	
	.page-filter
	{
		display: table; width: 99.6%;table-layout: fixed;
		
		.item
		{
			 display: table-cell; vertical-align: -webkit-baseline-middle; padding-right:10px;
			 
			 .date-range-container{width:100%;}
			 .date-range-container .date-range input{padding:9.5px 10px;}
		}
		
		.status_filter{width: 100px; padding-right:22px;}
		 
	}/*page-filter*/
	
	.input-text-field{@include input-text-field($placeholder-ipad);}
	.input-select-field{@include input-text-field($placeholder-ipad);}
	
	.auto_complete{position:absolute;}
	
	.item_card
	{
		.inventory{width:15%;padding:50px 0 50px 0; }
		
		.item_details
		{
			float:right; width:70%;
			
			.item_description
			{
				 padding:10px;font-size:12px;
			}
			
			.rgtbdr{border-right:1px solid lightgray;}
		}
		
		.item_status{float:right; width:14%;padding:45px 0 45px 0; }
	}
	
	.preview_action_wrapper
	{
		.send_email_wrapper{width:73%;}
		
		.send_email_input_wrapper
		{
			width:75%;
			input{width:92%;}
		}
		
		.send_email_submit_wrapper input{padding:13px 20px;}
		
		.download_pdf_wrapper{width:25%;}
			
	}
	
	.business_entity_info
	{
		.information_wrapper
		{
			.profile_wrapper
			{
				width:30%;max-height:340px;
			}/*profile_wrapper*/
			
			.notes_wrapper
			{
				max-height:340px;width:68%;
			}/*.notes_wrapper*/
			
		}/*.information_wrapper*/
		
	}/*business_entity_info*/
	
	.splitPartialItem{width:41%;}
	.original_varialble_item{ width: 90%;}
	
}
