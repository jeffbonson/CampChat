
@import 'components/attributes';

.mask_page
	{
		position:fixed; background :#05324e; top:0; left:0; width:100%; height:100%;
		opacity:0; display:none;
		
		-webkit-animation-duration: .3s;
	    animation-duration: .3s;
	    -webkit-animation-fill-mode: forwards;
	    animation-fill-mode: forwards;
	    -webkit-animation-name: modalShow;
	    animation-name: modalShow;
	    -webkit-animation-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55);
	    animation-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55); 
	        
	}
	
.is_active{opacity:0.5; display : block;}

.is_open
{
	opacity:1 !important; display : block !important;
	 -webkit-animation-name: fadeIn;
	-webkit-animation-duration: .1s;
	animation-name: fadeIn;
	animation-duration: .1s;
}

@-webkit-keyframes fadeIn 
{
	0% { opacity: 0; }
	20% { opacity: 0; }
	40% { opacity: 0.3; }
	60% { opacity: 0.5; }
	80% { opacity: 0.9; }
	100% { opacity: 1; }
}

@keyframes fadeIn 
{
	0% { opacity: 0; }
	20% { opacity: 0; }
	40% { opacity: 0.3; }
	60% { opacity: 0.5; }
	80% { opacity: 0.9; }
	100% { opacity: 1; }
}

.dialog_box
{
	float:left; background: #FFF; opacity:0; display:none;    overflow: hidden;
	
	border-radius:4px;
	position:absolute; top:0; left:0; min-height:300px;
	
	-webkit-transform: translateZ(0);
    transform: translateZ(0);
    transition: all .3s;
    z-index: 5000;
	
	/*-webkit-animation-duration: .3s;
    animation-duration: .3s;
    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
    -webkit-animation-name: modalShow;
    animation-name: modalShow;
    -webkit-animation-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55);
    animation-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55);*/
    
    background:#FFF;
    
    
    
    .dialog-wrapper
    {
    	float:left; width:100%;    background: #FFF;
    	
	    .title-bar
	    {
	    	float:left;  background: #FFF; width:97%;
				
			.header-bar
			{
				float:left; width:95%; text-align:left; color:$dialog-title;
				
			}  
			
			.close-dialog
			{
				float:right;  text-align:center; color : $dialog-close;
				cursor:pointer;
			}  	
	    }/*title-bar*/
	    
	    
	    
	    .footer-box
	    {
	    	background:$w; 
	    	float:left; width:97%;
	    	padding: 20px 20px 20px 0;
	    	
	    	.cancel
	    	{
	    		@include cancel-button;
	    		float:right !important;
	    		width: auto; font-weight:normal !important;
	    	}
	    	
	    	.save
	    	{
	    		@include button;
	    		float:right !important;
	    		width: auto; font-weight:normal !important;
	    	}
			
			.delete
	    	{
	    		@include button;
	    		float:right !important;
	    		width: auto; font-weight:normal !important;
	    	}
	    	
	    }/*footer-box*/
	    
	}/*dialog-wrapper*/
    
}

.tab-box
	    {
	    	float:left; width: 99.6%;     background: #FFF; margin-top:10px;box-shadow:1px 1px 5px lightgray; 
	    	overflow: hidden;margin-bottom: 10px;
				
	    	table
	    	{
	    		width:100%;border-collapse: collapse;
	    		
				tr th
	    		{
	    			color : #000; 
	    			width:16.6%; 
	    			border-bottom:1px solid lightgray;
	    			
	    			
	    			
	    			a{float:left;width:100%;padding:15px 0 15px 0; text-align:center; color:#000;cursor:pointer;
						border-top:5px solid  #FFF;
						&:hover{background:#b7dfe5; border-top:5px solid $submit-bg !important;}
					}
	    		}
				
				
	    		tr th:first-child{border-left:0;}
				
	    		.is-active
	    		{
	    			border-top:0px solid $submit-bg; border-bottom-color: #f8fafc;
	    			color :$b; border-left:1px solid lightgray; border-right:1px solid lightgray;
	    			
	    			&:hover{color: $b !important;}
	    			
	    			a{font-weight:bold;
					 border-top:5px solid  $submit-bg;
						&:hover{background:#b7dfe5; border-top:5px solid $submit-bg !important;}
					}
	    		}
	    	}
	    }/*tab-box*/
	    
	    .tab-content
	    {
	    	min-height:100px; float:left; width:99.5%;box-shadow:1px 1px 5px lightgray;
	    	background :#FFF; border-bottom:1px solid lightgray; 
	    	
	    }/*tab-content*/

