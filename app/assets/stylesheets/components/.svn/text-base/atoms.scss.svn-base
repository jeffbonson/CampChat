@import 'components/attributes';

html{width:100%; min-height:100%;}


body
{
	background:$pagebg; 
	margin:0; padding:0;
	
	text-size-adjust: 100%;
	-webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    width:100%; min-height:100%;
    text-shadow: none;
    
    font-family: 'Ubuntu', sans-serif,"Arial";
    
    
    
}

.txtBorder{border:1px solid $place-holder-color !important; border-radius:4px; width:91% !important; padding:13px 10px !important;}

a{color:$link; text-decoration : none;}

input[type="text"]
{
	@include tb;
}

textarea
{
	@include tb;
	width: 91% !important;
	min-height: 150px;
	resize: none;
}

input[type="number"]
{
	@include tb;
	font-size:inherit;
	
	text-align:right;
	 -moz-appearance: textfield;
}

input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
   
    
}


input[type="date"]
{
	cursor:pointer;
	float: left;
    width: 95%;
    border: 1px solid #a2b6c3 !important;
    border-radius: 4px;
    cursor: text;
    padding: 13px 10px;
    transition: border .1s linear;
    -webkit-appearance: none;
    font-family: inherit;
    font-size: 16px;
    font-size: inherit;
    
}

input[type=date]::-webkit-inner-spin-button, 
input[type=date]::-webkit-outer-spin-button { 
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
   
    
}

input[type="email"]
{
	float:left; width: 94.5%;
	border: 1px solid $input-border;
    border-radius: 4px;
    cursor: text;
    padding: 11px 10px;
    transition: border .1s linear;
    font-size: $tb;
    outline:0;
}

input[type="password"]
{
	float:left; width: 94.5%;
	cursor: text;
    padding: 11px 10px;
    transition: border .1s linear;
    font-size: $tb;
    border: 1px solid $input-border;
    outline:0;
    border-radius: 4px;
}

input[type="submit"]
{
	@include button
}

button
{
	@include button
}

input:-webkit-autofill 
{
    -webkit-box-shadow: 0 0 0 1000px white inset !important;
}



.nav_menu_frame,.business_entity_notes
{

	/* width */
	::-webkit-scrollbar 
	{
	    width: 10px;
	}
	
	/* Track */
	::-webkit-scrollbar-track 
	{
	    background: #537EC1; 
	}
	 
	/* Handle */
	::-webkit-scrollbar-thumb 
	{
	    background: #3C5B8B; border-radius:10px;
	}
	
	/* Handle on hover */
	::-webkit-scrollbar-thumb:hover
	 {
	    background: #314B73; 
	}

}



/* The checkbox_container */
.checkbox_container , .radio_container
{
    display: block;
    position: relative;
    padding-left: 35px;
    margin-bottom: 12px;
    cursor: pointer;
    font-size: 16px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
	
	input {position: absolute;opacity: 0;cursor: pointer;}
	
	&:hover input ~ .checkmark {background-color: #ccc;}
	
	input:checked ~ .checkmark {background-color: #2196F3;}
	
	input:checked ~ .checkmark:after {display: block;}
	
}

.checkbox_container
{ 
	.checkmark
	{
		position: absolute;
	    top: -4px;
	    left: 35%;
	    height: 20px;
	    width: 20px;
	    background-color: #a9a2a2;
		cursor:pointer;
	}
	
	.checkmark:after 
	{
	    left: 7px;
	    top: 3px;
	    width: 3px;
	    height: 10px;
	    border: solid white;
	    border-width: 0 3px 3px 0;
	    -webkit-transform: rotate(45deg);
	    -ms-transform: rotate(45deg);
	    transform: rotate(45deg);
	}
	
	.checkmark:after 
	{
	    content: "";position: absolute;display: none;
	}
}

.radio_container 
{
	margin-top: 5px;
		
	.checkmark 
	{
	    position: absolute;
	    top: -3px;
	    left: 0;
	    height: 25px;
	    width: 25px;
	    background-color: #a9a2a2;
	    border-radius: 50%;
	}
	
	.checkmark:after
	{
	 	top: 9px;
		left: 9px;
		width: 8px;
		height: 8px;
		border-radius: 50%;
		background: white;
	}
	
	.checkmark:after {content: "";position: absolute;display: none;}
}











.noselect {
  -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Safari */
     -khtml-user-select: none; /* Konqueror HTML */
       -moz-user-select: none; /* Firefox */
        -ms-user-select: none; /* Internet Explorer/Edge */
            user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome and Opera */
}

