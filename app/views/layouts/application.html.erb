<!DOCTYPE html>
<html>
  <head>
    <title>Campchat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
	
	<link rel="SHORTCUT ICON" href="<%=asset_path('logo.png')%>"/>
    <meta charset="utf-8" />
	<link rel="apple-touch-icon" sizes="128x128" href="<%=asset_path('logo.png')%>">
	
	 <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	
	<link href="https://fonts.googleapis.com/css?family=Ubuntu:300,400" rel="stylesheet">
	
	
	<meta name="apple-mobile-web-app-capable" content="yes" />
	<meta name="mobile-web-app-capable" content="yes">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
	<meta name="viewport" content="width=320, initial-scale=1">
	
	
	<meta name="theme-color" content="#003662" />
	<meta name="msapplication-navbutton-color" content="#003662">
	<meta name="apple-mobile-web-app-status-bar-style" content="#003662">
	
<title><%=yield :page_title or 'Artis79' %></title>
  </head>

  <body>
  	
	
  	
	<div onclick="topFunction()" class="scroll_to_top" title="Go to top">
		<span class='fa fa-chevron-up'></span>
	</div>
	
  	<% if user_signed_in? %>
  	<div class="nav_menu_frame">
  		<%=render 'users/list'%>
  	</div>
	<%end%>
	
	<div class="nav_page_frame">
		<div class="page_frame">
			<header>
				<%=render 'layouts/header'%>
			</header>
			
			
		
			<content>
				<%= yield %>
			</content>
		</div>
	</div>
  	
    <div class="mask_page"></div>
	<div class="dialog_box"></div>
	
	<%#=render 'layouts/image_gallery'%>
	
	
	
  </body>
</html>
